<resources>

    <style name="Widget.Mobile_tour.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- Включаем затемнение вокруг окна -->
        <item name="android:backgroundDimAmount">0.6</item> <!-- Устанавливаем прозрачность затемнения (от 0.0 до 1.0) -->
    </style>

    <style name="On_Clicked_Item_Button">
        <item name="android:background">@drawable/button_clicked_dost_before</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@drawable/checkbox_background</item>
        <item name="android:buttonTint">@color/checkbox_tint_selector</item>
    </style>


    <style name="Widget.Mobile_tour.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>